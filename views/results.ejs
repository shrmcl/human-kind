<!-- adds header.ejs -->
<%- include("partials/header") %>
<%- include("partials/inNavbar") %>

<div class="container">
  <div class="col">
    <div class="row results-top">
      <h2 class="text-center">These are your matches!</h2>
       
      <a class="btn btn-info btn-md" href="/results" role="button">See More</a>
      
    </div>
    <form action="/results" method="POST" id="savedMatches">
      <div class="row row-cols-1 row-cols-md-3">
        <%# store random numbers to prevent duplicates %>
        <% let ranNumbers = []; %>
        <% for(let i = 0;  i < 3; i++) { %>
          <% let ran = Math.floor((Math.random() * matches.length -1) + 1); %>
          <% if (ranNumbers.includes(ran)) { %>
            <% ran = Math.floor((Math.random() * (matches.length -1)) + 1); %>
          <% } %>
        <% ranNumbers.push(ran) %>
          <div class="col mb-4">
            <div class="card results-card">
              <div class="card-header">
                <h3 class="card-title"><%= matches[ran].username %></h3>
                <input type="checkbox" name="username" value=<%=matches[ran]._id %>>
              </div>
                <img src=<%= matches[ran].pic %> alt="profile photo">
                <div class="card-body">
                  <p class="bio"><%= matches[ran].bio %></p>
                  <div class="common-interests">
                    <p class="info-label">Common Interests:</p>
                    <% matches[ran].interests.forEach(el => { %>
                    <a class="results-interests" href="/orgIndex#<%= el %>"><%= el %></a> 
                    <% }) %>
                  </div>
                  <div class="card-bottom">
                    <p class="age-gender">
                      <%= matches[ran].gender %><br>
                      <%= matches[ran].ageRange %>
                    </p>
                    <!-- <a class="btn btn-msg-medium" href="/chat" role="button">Message</a>       -->
                    <form action="/message" method="post" id="message-form">
                      <button form="message-form" type="submit" class="btn-to-chat" formaction="/message?friend=<%= matches[ran].username %>&friendpic=<%= matches[ran].pic %>">message</button>
                    </form>
                  </div>
                </div> 
            </div>
          </div>    
        <% } %>
      </div>
      <!-- formaction="" only works with button type="submit" -->
      <button form="savedMatches" type="submit" class="btn btn-primary btn-md results-save" formaction="/results">Save matches</button>
      
      <!-- <a class="btn btn-info btn-lg" href="/dashboard" role="button">Back to my Dashboard</a>
      <a class="btn btn-warning btn-lg" href="/logout" role="button">Logout</a> -->
    </form>
  </div>
</div> 

<%- include("partials/footer") %>