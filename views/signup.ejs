<%- include("partials/header") %>
  
    <div class="container">
      
      <form action="/signup" method="post" enctype="multipart/form-data">
        <h1>Sign up</h1>
        <br><br>
        <label for="fname">First name:</label>
        <input type="text" placeholder="first" id="fname" name="fname" required>
        <label for="lname">Last name:</label>
        <input type="text" placeholder="last" id="lname" name="lname" required>
        <label for="email">Email</label>
        <input type="text" placeholder="email" id="email" name="email" required>
        <label for="pw">Password:</label>
        <input type="password" placeholder="password" id="pw" name="password" required>
        <label for="uname">Create a username:</label>
        <input type="text" placeholder="username" id="uname" name="username" required>
        
        <label for="bio">Brief description of yourself: <span>60 character max</span></label><br>
        <textarea id="bio" name="bio" cols="80" rows="1" maxlength="60" placeholder="type here"></textarea><br><br>

        <p>Age:</p>
        <input type="radio" name="age" id="0-20" value="0-20">
        <label for="0-20">Under 20</label>
        <input type="radio" name="age" id="20-30" value="20-30">
        <label for="20-30">20-30</label>
        <input type="radio" name="age" id="30-40" value="30-40">
        <label for="30-40">30-40</label>
        <input type="radio" name="age" id="40-50" value="40-50">
        <label for="40-50">40-50</label>
        <input type="radio" name="age" id="60-70" value="60-70">
        <label for="60-70">60-70</label>
        <input type="radio" name="age" id="70+" value="70+">
        <label for="70+">70+</label>
        <br><br>
        
        <p>Gender:</p>
        <input type="radio" name="gender" id="female" value="female">
        <label class="padright" for="female">Female</label>
        <input type="radio" name="gender" id="male" value="male">
        <label class="padright" for="male">Male</label>
        <input type="radio" name="gender" id="nonbinary" value="nonbinary">
        <label class="padright" for="nonbinary">Nonbinary</label>
        <input type="radio" name="gender" id="other" value="other">
        <label class="padright" for="other">Other</label>
        <br><br>

        <p>What social issues are you interested in? <span>Select all that apply.</span></p>
        <input type="checkbox" id="animals" name="interests" value="animals">
        <label class="padright" for="animals">Animals</label>
        <input type="checkbox" id="housing" name="interests" value="housing">
        <label class="padright" for="housing">Housing</label>
        <input type="checkbox" id="cleanup" name="interests" value="environment">
        <label class="padright" for="cleanup">Neighborhood Cleanup</label>
        <input type="checkbox" id="food" name="interests" value="hunger">
        <label class="padright" for="food">Food & Hunger</label>
        <input type="checkbox" id="organizing" name="interests" value="community">
        <label class="padright" for="organizing">Community Organizing</label>
        <input type="checkbox" id="lgbtq" name="interests" value="LGBTQ+">
        <label class="padright" for="lgbtq">LGBTQ+</label>
        <input type="checkbox" id="elderly" name="interests" value="elderly">
        <label class="padright" for="elderly">Elderly</label>
        <input type="checkbox" id="incarceration" name="interests" value="incarceration">
        <label class="padright" for="incarceration">Incarceration</label>
        <br><br>

        <label for="fname">Add a profile image:</label><br>
        <input type='file' name='image' id='pic' required/>
        <br><br>

        <input type="submit" class="btn btn-info btn-lg" value="Submit Profile">

    </form>
    </div>

<%- include("partials/footer") %>