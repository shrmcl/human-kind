<!-- adds header.ejs -->
<%- include("partials/header") %>

<div class="container">
    
    <div class="row mb-5">
        <div id="dashboard-welcome" class="col">
            <div class="welcome-left">
                <img class="profile-big" src=<%= data.displayImg %> alt=""> 
                <h4 class="text-start">Hello, <%= data.displayName %></h4>
            </div>
            <div class="welcome-right">
                <a class="btn btn-info btn-md" href="/results" role="button">Show me matches</a>
                <a class="btn btn-outline-info" href="/edit" role="button">Update preferences</a>
            </div>
        </div>
    </div>
  
    <div class="row">
        <h5 class="text-left mt-5">Your Saved Matches</h5>
    </div>

    <div class="row row-cols-3 row-cols-md-3">
            <!-- show each saved match -->
            <% data.savedMatches.forEach((el) => { %>
                <div class="col px-0">
                    <div class="card text-dark bg-light dashcard">
                        <div class="contents">
                            <img src=<%= el.pic %> class="card-img-top" alt="user photo">
                            <div class="info">
                                <h6><%= el.username %></h6>
                                <p><%= el.bio %></p>
                                <p><%= el.interests.join(', ') %></p> 
                                <a class="" href="#" role="button">Remove</a>     
                                <a class="" href="/chat" role="button">Message</a>  
                            </div> 
                        </div>
                    </div>
                </div>
            <% }) %>
    </div>
</div>
    
<!-- adds footer.ejs -->
<%- include("partials/footer") %>