<!-- adds header.ejs -->
<%- include("partials/header") %>
<%- include("partials/inNavbar") %>

<div class="container">
  <div class="row">
    <a href="/dashboard" class="btn">Leave Room</a>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <header class="chat-header">
          <div class="chat-welcome">
            <h3>Conversation between</h3>
            <div class="chat-group"><img class="chat-pic" src=<%= data.friendpic %> alt=""> <%= data.friend %></div> 
            <h3>&</h3> 
            <div class="chat-group"><img class="chat-pic" src=<%= data.displayImg %> alt=""> <%= data.displayName %></div>
          </div>
      </header>
      <main class="chat-main">
        <div class="chat-messages"></div>
      </main>
      <div class="chat-form-container">
        <form id="chat-form">
          <input
            id="msg"
            type="text"
            placeholder="Enter Message"
            required
            autocomplete="off"
          />
          <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") %>