<!-- adds header.ejs -->
<%- include("partials/header") %>

<!-- navbar for chat only -->
<div class="navbar-chat">
    <div>
      <p><%= data.displayName %></p>
      <p><%= data.friend %></p>
    </div>
    <a class="button" href="/dashboard">close</a>
</div>

<div class="chat-bg">
  <img class="chat-pic" src=<%= data.displayImg %> alt="">
  <img class="chat-pic" src=<%= data.friendpic %> alt="">
</div>

<main class="chat-main">
  <div class="chat-messages"></div>
</main>

<form id="chat-form">
  <input
    id="msg"
    type="text"
    placeholder="| Type Something"
    required
    autocomplete="off"
  />
  <button class="button">Send</button>
</form>

<%- include("partials/footer") %>